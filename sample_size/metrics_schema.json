                                "denominator_variance": {"type": "number"},
                                "covariance": {"type": "number"}
                            },
                            "required": [
                                "mde",
                                "numerator_mean",
                                "numerator_variance",
                                "denominator_mean",
                                "denominator_variance",
                                "covariance"
                            ]
                        }
                    }
                }
            }
        ],
