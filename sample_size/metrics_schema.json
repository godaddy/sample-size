                            "type": "object",
                            "properties": {
                                "mde": {"type": "number"},
                                "probability": {"type": "number"}
                            },
                            "required": ["mde", "probability"]
                        }
                    }
                }
            },
            {
                "if": {
                    "properties": {
                        "metric_type": {"const": "numeric"}
                    }
