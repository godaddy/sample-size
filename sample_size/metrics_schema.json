                "type": "string",
                "enum": ["boolean", "numeric", "ratio"]
            }
        },
        "allOf": [
            {
                "if": {
                    "properties": {
                        "metric_type": {"const": "boolean"}
                    }
                },
                "then": {
                    "properties": {
